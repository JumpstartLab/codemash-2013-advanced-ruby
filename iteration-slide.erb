<div id='<%= id %>'
  style='background-color: #b3c7e7;'
  class='slide <%= slide_classes.join(' ') %>'
  data-transition='<%= transition %>'
  data-sections="<%= hierarchy.reverse.join(',') %>"
  data-sequence="<%= sequence %>">

  <div class='content vertical-center <%= content_classes.join(' ') %>'>
    <%= content_as_html %>
  </div>

  <div class="main-navigation">
    <div class="logo"> </div>
    <%= title %>
  </div>
</div>